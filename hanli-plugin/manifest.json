{
  "manifest_version": 3,
  "name": "Hanli",
  "version": "1.0",
  "description": "采集Temu商品详情信息并导出JSON",
  "permissions": ["contextMenus", "scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "韩立商品采集插件"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
